<h1>Listing sites</h1>
<%= link_to '新建应用', new_site_path, class: 'btn btn-lg btn-primary' %>
<hr/>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Template</th>
      <th>Key</th>
      <th>Status</th>
      <th>Title</th>
      <th>Description</th>
      <th>Preview image</th>
      <th>Is private</th>
      <th>Private password</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sites.each do |site| %>
      <tr>
        <td><%= site.template.title %></td>
        <td><%= site.key %></td>
        <td><%= site.status %></td>
        <td><%= site.title %></td>
        <td><%= site.description %></td>
        <td><%= site.preview_image_key %></td>
        <td><%= site.is_private %></td>
        <td><%= site.private_password %></td>
        <td><%= link_to '查看', site %></td>
        <td><%= link_to '编辑', edit_site_path(site) %></td>
        <td><%= link_to '删除', site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @sites %>